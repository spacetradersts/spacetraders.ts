{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ESNext",
      "moduleResolution": "node",
      "declarationDir": "./dist",
      "strict": false,
      "declaration": true,
      "removeComments": false,
      "alwaysStrict": true,
      "pretty": false,
      "skipLibCheck": true,
      "sourceMap": true,
      "esModuleInterop": false,
      "resolveJsonModule": true,
      "rootDir": ".",
      "outDir": "dist",
      "baseUrl": ".",
    },
      "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "fallbackPolling": "dynamicPriority"
    },
    "exclude": [
      "node_modules",
      "./node_modules",
      "./node_modules/*",
      "./node_modules/@types/node/index.d.ts"
    ],
    "include": [
      "src/**/*"
    ]
  }